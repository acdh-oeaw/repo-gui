    <style type="text/css">
        #limit-sel {
            border: 1px solid #88dbdf;
            color: #88dbdf;
            background: #FFF;
            font-size: 14px;
            line-height: 1.5;
            border-radius: .25rem;
            padding: 3px 3px 3px 3px;
            appearance:none;
            -moz-appearance:none; /* Firefox */
            -webkit-appearance:none; /* Safari and Chrome */
        }
        
        
         #orderby {
            border: 1px solid #88dbdf;
            background: #FFF;
            color: #88dbdf;
            font-size: 14px;
            line-height: 1.5;
            border-radius: .25rem;
            padding: 3px 3px 3px 3px;
            appearance:none;
            -moz-appearance:none; /* Firefox */
            -webkit-appearance:none; /* Safari and Chrome */
        }
    </style>
    {% if data %}
        <span> {{ data }} Page(s)</span>
        <span class="results-info-bar"> <a href="#" id="first-btn" >First</a></span>
    {% else %}
        <span> <a href="#" id="first-btn" >First</a></span>
    {% endif %}
    
    <span><a href="#" id="prev-btn" >Prev</a> </span>
    <span><a href="#" id="next-btn" >Next</a></span>
    <span><a href="#" id="last-btn" >Last</a></span>

    <span class="results-info-bar">Items: 
        <select id="limit-sel">
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="25">25</option>
            <option value="50">50</option>
        </select> 
    </span>
    
    <span class="results-info-bar">Sort By:  
        <select id="orderby">
            <option value="asc">ASC (title)</option>
            <option value="desc">DESC (title)</option>
        </select> 
    </span>
    
  
    
    
