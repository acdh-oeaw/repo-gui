<!-- START : ACDH PERSON template: detailView_Person  -->
{% if result['image'] %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
    
    {%  if result['basic']['acdh:hasTitle'] %}
        <div class="res-property">
            <span class="res-title">{{ result['basic']['acdh:hasTitle'][0] }}</span>
        </div>
    {% endif%} 
    
    {% if result['basic']['acdh_rdf:type'] %}
        <div class="res-property">
            <i class="material-icons">&#xE54E;</i>
            <span class="res-prop-label">Type:</span> 
            <span class="res-prop-value">
                <a href="{{ url('<front>') }}discover/&type={{ result['basic']['acdh_rdf:type']['title'] }}/10">{{ result['basic']['acdh_rdf:type']['title'] }}</a>
            </span>
        </div>
    {% endif%}	
    
    {%  if result['basic']['acdh:hasIdentifier'] %}
        {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['basic']['acdh:hasIdentifier'], 'icon': "copyright", 'label': "Identifier(s)" } ) }}
    {% endif%}
    
    {%  if result['basic']['acdh:isMember'] %}
        {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['basic']['acdh:hasIdentifier'], 'icon': "account_balance", 'label': "is Member" } ) }}
    {% endif%}
    
    {% if result['extended'] %}
        <h3 class="single-res-heading">Contact Details</h3>
        
        {% if result['extended']['acdh:hasCountry'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasCountry'], 'icon': "subtitles", 'label': "Country" } ) }}
        {% endif%}
        
        {%  if result['extended']['acdh:hasRegion'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasRegion'], 'icon': "subtitles", 'label': "Region" } ) }}
        {% endif%}

        {%  if result['extended']['acdh:hasCity'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasCity'], 'icon': "subtitles", 'label': "City" } ) }}
        {% endif%}


        {%  if result['extended']['acdh:Postcode'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:Postcode'], 'icon': "subtitles", 'label': "Postcode" } ) }}
        {% endif%}

        {%  if result['extended']['acdh:hasAddressLine1'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasAddressLine1'], 'icon': "subtitles", 'label': "Address" } ) }}            
        {% endif%}

        {%  if result['extended']['acdh:hasAddressLine2'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasAddressLine2'], 'icon': "subtitles", 'label': "Address" } ) }}
        {% endif%}
        
        
        {%  if result['extended']['acdh:hasEmail'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasEmail'], 'icon': "subtitles", 'label': "Email" } ) }}
        {% endif%}
        
        {%  if result['extended']['acdh:hasUrl'] %}
            {{ include('/modules/oeaw/templates/displayField.html.twig', {'data': result['extended']['acdh:hasUrl'], 'icon': "subtitles", 'label': "Url" } ) }}
        {% endif%}
    
        
    {% endif%}

    
{% if result['image'] %}</div>{% endif%}    
{% if result['image'] %}	
    <div class="res-inside-wrap col-lg-4 ">	
        <div class="single-res-thumb">
            <a data-lightbox="{{ result['resourceTitle'] }}" href="{{ result['image'] }}"><img src="{{ result['image'] }}"></a>
        </div>
    </div>
{% endif%}

<!-- END : ACDH PERSON template: detailView_Person  -->